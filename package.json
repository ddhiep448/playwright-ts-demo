  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "dotenv": "^17.2.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
