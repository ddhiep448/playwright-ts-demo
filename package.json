{
  "name": "playwright-ts-demo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test:all": "playwright test",
    "test:login": "playwright test -g '@login'",
    "test:sidebarSearch": "playwright test -g '@sidebarSearch'",
